<div class="main">
	<div class="main-inner">
  <h2>Post List</h2>
    <div class="post-area">
		  <% @posts.each do |post| %>
			<div class="post-component">
				<%= link_to(post, class: "post-link-area") do %>
      	<p class="post-title"><%= post.title %></p>
      	<p class="post-body"><%=  post.body %></p>
        <p class="post-date"><%= post.created_at.to_s(:published_on) %></p>
				<% end %>
				<div class="like">
        	<like-button :post-id="<%= post.id %>"></like-button>
				</div>
			</div>
  		<% end %>
    </div>
  </div>
  <%= paginate @posts %>
</div>